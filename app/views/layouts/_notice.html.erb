<% flash.each do |type, message| %>
  <% alert_type = type == 'alert' ? 'red' : 'lime' %>
  <div role="alert" class="flex items-center rounded-lg border-l-4 border-<%= alert_type %>-500 bg-<%= alert_type %>-50 p-4 shadow-md mb-4">
    <div class="flex-shrink-0">
      <% if type == 'alert' %>
        <!-- Icon for alert -->
        <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 8A8 8 0 11-18 8A8 8 0 0118 8zM8.93 6.58a1 1 0 10-1.86 0l-1 5a1 1 0 00.98 1.2h3.96a1 1 0 00.98-1.2l-1-5zM9 14a1.5 1.5 0 100-3 1.5 1.5 0 000 3z" clip-rule="evenodd" />
        </svg>
      <% else %>
        <!-- Icon for success -->
        <svg class="h-5 w-5 text-lime-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 13.293a1 1 0 011.414 0l5-5a1 1 0 10-1.414-1.414l-4.293 4.293-1.293-1.293a1 1 0 00-1.414 1.414l2 2z" clip-rule="evenodd" />
        </svg>
      <% end %>
    </div>
    <div class="ml-3">
      <strong class="block font-medium text-<%= alert_type %>-800"><%= message %></strong>
    </div>
  </div>
<% end %>
