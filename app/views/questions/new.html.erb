<div class="max-w-3xl mx-auto p-6 bg-gray-100 mt-10 rounded-lg shadow-lg">
  <h1 class="text-3xl font-bold text-gray-800 mb-4"><%= @quiz.title %></h1>
  <h2 class="text-2xl font-semibold text-gray-700 mb-6">New Question</h2>

  <div>
    <%= render "form", question: @question %>
  </div>

  <div class="mt-6 flex gap-4">
    <%= link_to "Cancel", @quiz, class: 'bg-gray-500 text-white font-semibold py-2 px-4 rounded hover:bg-gray-600' %>
  </div>
</div>
