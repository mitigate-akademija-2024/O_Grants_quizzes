<div class="max-w-2xl mx-auto p-6 bg-gray-100 shadow-lg rounded-lg mt-10">
  <div >
    <%= render @quiz %>
  </div>

  <div class="flex gap-4 mt-6">
  <%= link_to "Back to quizzes", quizzes_path, class: "inline-block text-blue-500 hover:text-blue-700 font-semibold" %>
    <%= link_to "Edit this quiz", edit_quiz_path(@quiz), class: "inline-block bg-yellow-500 text-white font-semibold py-2 px-4 rounded hover:bg-yellow-600" %>
    <%= button_to "Destroy this quiz", @quiz, method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "inline-block bg-red-500 text-white font-semibold py-2 px-4 rounded hover:bg-red-600 focus:outline-none focus:ring active:bg-red-700" %>
  </div>
</div>
